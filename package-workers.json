{
  "name": "business-manager-workers",
  "version": "1.0.0",
  "description": "Business Manager API on Cloudflare Workers with D1",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create business-manager-db",
    "db:init": "wrangler d1 execute business-manager-db --file=./schema.sql",
    "db:init-local": "wrangler d1 execute business-manager-db --local --file=./schema.sql"
  },
  "dependencies": {
    "itty-router": "^4.0.0"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
